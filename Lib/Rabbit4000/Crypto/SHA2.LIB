// used by x509.lib
_sha_debug
void sha224_vector(size_t num_elem, const char __far * __far * addr,
                 const size_t __far *len, char __far *mac)
{
	auto word i;
	auto sha224_context pms;

	sha224_init(&pms);
	for (i = 0; i < num_elem; ++i)
		sha224_add(&pms, addr[i], len[i]);
	sha224_finish(&pms, mac);
}

