// TODO: Reduce size of sha512_context by putting message schedule on stack
//       the context should only hold 128 bytes of the input buffer, message
//       schedule is wiped out on each call to sha512_process.
typedef struct sha512_context {
	union {
	   JSUint64 w[80];       /* message schedule, input buffer, plus 64 words */
	   uint32_t l[160];
	   uint8_t  b[640];
	} u;
	JSUint64 h[8];       /* 8 state variables */
	JSUint64 sizeLo;     /* 64-bit count of hashed bytes. */
} sha512_context;

#define SHA512_BLOCK_LENGTH         128     /* input block size (in bytes) */
#define SHA512_LENGTH               64      /* bytes produced by hash */

