	    JSU64_INIT(db0c2e0d,64f98fa7), JSU64_INIT(47b5481d,befa4fa4)
	};

    _f_memset(ctx, 0, sizeof *ctx);
    _f_memcpy(ctx->h, H384, sizeof H384);
}

