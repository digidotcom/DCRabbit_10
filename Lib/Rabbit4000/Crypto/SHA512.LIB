{
	/* SHA-384 initial hash values */
	static const __far JSUint64 H384[8] = {
	    JSU64_INIT(cbbb9d5d,c1059ed8), JSU64_INIT(629a292a,367cd507),
	    JSU64_INIT(9159015a,3070dd17), JSU64_INIT(152fecd8,f70e5939),
