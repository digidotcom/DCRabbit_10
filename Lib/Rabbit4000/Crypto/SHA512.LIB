/* ============= Common constants and defines ======================= */

#define SHR(x,n) (x >> n)
#define SHL(x,n) (x << n)
#define Ch(x,y,z)  ((x & y) ^ (~x & z))
#define Maj(x,y,z) ((x & y) ^ (x & z) ^ (y & z))
#define SHA_MIN(a,b) (a < b ? a : b)

// swap a 4-byte or 8-byte value in place
#asm __xmem __nodebug
_byteswap8::
	ld pz, (px)
   
	ld bcde, (px+4)
   ; swap byte order of BCDE
	ld a, b $ ld b, e $ ld e, a $ ld a, c $ ld c, d $ ld d, a
   ld (px), bcde
   
	ld bcde, pz
   ; swap byte order of BCDE
	ld a, b $ ld b, e $ ld e, a $ ld a, c $ ld c, d $ ld d, a
   ld (px+4), bcde

	lret

_addto::
	; px already holds first parameter (source)
	ld py, (sp+7)
	; dest->lo += source->lo
	ld jkhl, (px)
	ld bcde, (py)
	add jkhl, bcde
	ld (py), jkhl

	; dest->hi += source->hi + carry
	ld jkhl, 0
	adc hl, hl

	ld bcde, (px+4)
	add jkhl, bcde

	ld bcde, (py+4)
	add jkhl, bcde
	ld (py+4), jkhl
	lret
#endasm

