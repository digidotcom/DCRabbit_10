	ld		hl,(sp+@sp+digs)
	add	hl,hl
	ld		bc,hl
	ld		pz,(sp+@sp+r)
	ld		px,(sp+@sp+x)
	ld		py,(sp+@sp+y)
	ld		de,1
	ld		de',0
