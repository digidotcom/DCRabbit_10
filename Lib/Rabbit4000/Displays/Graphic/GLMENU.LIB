               int border, int shadow, char **menu_options,
               char* title, int maxOptDisplayed);

#ifndef NO_BORDER
#define NO_BORDER		0
#endif

#ifndef SINGLE_LINE
#define SINGLE_LINE 	1
#endif

#ifndef DOUBLE_LINE
#define DOUBLE_LINE 	2
#endif

