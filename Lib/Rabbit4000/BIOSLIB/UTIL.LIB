__root void _unexp_interrupt(void);
/*** EndHeader */

#asm __nodebug __root
_unexp_interrupt::
	; runtime error # for unexpected interrupt loaded into hl in vector code
	push	hl
	clr	hl
	push	hl
	call	_init_bad_interrupts
   add	sp,2
	ld		hl,(sp+0)

   push	ip
   push	ip
   pop	de
   ld		a,e
   and	3
   jr		z,.ip_level0
	ipres
.ip_level0:
	call	exception
	add	sp, 2				; if runtime error handler returns, continue on!

	ret
#endasm

