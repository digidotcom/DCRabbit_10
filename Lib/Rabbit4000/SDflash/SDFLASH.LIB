#define CMD1        1
#define CMD8        8
#define CMD9        9
#define CMD13       13
#define CMD16       16
#define CMD17       17
#define CMD24       24
#define CMD32       32
#define CMD33       33
#define CMD38       38
#define CMD55       55
#define CMD59       59
#define ACMD51      51
#define ACMD41      41
#define ACMD42      42

/*
 * Command retry count
 */
#define CMD0_RETRIES               2000
#define CMD1_RETRIES               5000
