	// Space and Backspace
	keyConfig (  0,'B',0, 0, 0,  0, 0 );
	keyConfig (  4,'S',0, 0, 0,  0, 0 );

	// Enter key
	keyConfig (  6,'E',0, 0, 0,  0, 0 );
