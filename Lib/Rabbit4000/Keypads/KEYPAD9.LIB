__nodebug
void keypadDef( void )
{
	#GLOBAL_INIT {__keyInitFlag   = FALSE;}
	if(!__keyInitFlag)
	{
		// the brdInit and/or the digConfig function hasn't been executed
		exception(-ERR_BADPARAMETER);
