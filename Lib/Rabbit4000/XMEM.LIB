/*** BeginHeader _gen_lin2seg ********************************/
void _gen_lin2seg(long* laddr, char norm);
#define _lin2seg(laddr) _gen_lin2seg(laddr, 0xe)
/*** EndHeader ***********************************************/

_xmem_debug
void _gen_lin2seg(long* laddr, char norm) {
#asm __nodebug
	push ix

    	ld hl, (sp+@sp+2+norm)
      ld bc,hl
      ld	ix, (sp+@sp+2+laddr)
      ld	a,(ix+2)
      ld	hl, (ix)
		_GEN_LIN2SEG(c)
      ld (ix),hl
		ex jk,hl     ; segment in jk from _GEN_LIN2SEG
      ld (ix+2), hl

	pop	ix
#endasm
}


