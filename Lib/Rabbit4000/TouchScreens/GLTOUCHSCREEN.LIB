__nodebug
int btnRecall(unsigned long xmemPtr, int BtnID)
{
	auto int result;
	result = xmem2root( 	&BtnData,
								xmemPtr + ( BtnID * sizeof( BtnData ) ),
								sizeof( BtnData ) );

	if (!result) return BTN_SUCCESS;
	else	return BTN_FAILURE;
}

