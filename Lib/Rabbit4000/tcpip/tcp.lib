	#define tcp_send(x, y) _tcp_send(x, y)
	#define tcp_sendsoon(x, y, z) _tcp_sendsoon(x, y, z)
#else
	#define tcp_send(x, y) _tcp_send(x)
	#define tcp_sendsoon(x, y, z) _tcp_sendsoon(x, y)
#endif

