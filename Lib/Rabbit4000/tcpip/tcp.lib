/*** EndHeader */
/*
 * Clamp a long value to +/- 16k and return it.  This avoids problems
 * with int arithmetic overflow.
 */
_tcp_nodebug int clamp16k(long x)
{
  if (x < -16384) return -16384;
  if (x > 16384) return 16384;
  return (int)x;
}


