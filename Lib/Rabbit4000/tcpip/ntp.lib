  // Query all configured servers.
  nvalids = 0;
  for (i = 0; i < NTP_SERVERS_COUNT; i++)
  {
    use_this[i] = 0;
    wfd rc = cof_ntp_query_server (ntp_servers[i], &timestamp, &tdiffs[i]);
    if (rc >= 0)
    {
      tdiffs[i] += tz;    //Adjust difference for time zone
      use_this[i] = 1;    // Mark as OK so far
      nvalids++;
    }
  }

  if (!nvalids)
  {
