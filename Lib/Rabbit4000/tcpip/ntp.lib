  skew = 0;    // Offset that we need to add to our SEC_TIMER to get the
               // correct averaged time.
  nvalids = 0;
  for (i = 0; i < NTP_SERVERS_COUNT; i++)
  {
    if (use_this[i])
    {
      nvalids++;
      skew += (tdiffs[i]-skew)/nvalids;
    }
  }

  //Adjust RTC
  if (skew)
  {
