icmp_echohandler_type ICMPEchoHandler;

_icmp_nodebug
void setICMPEchoHandler ( icmp_echohandler_type user_handler )
{
   #GLOBAL_INIT { ICMPEchoHandler = NULL; }

   ICMPEchoHandler = user_handler;
}

