SSPEC_SEEK_DEF(sspec_rseek) {
	auto int len;

   len = sfh->realspec->vartype;
	switch (whence) {
   case SEEK_SET:
		sfh->offset = offset;
   	break;
   case SEEK_CUR:
   	sfh->offset += offset;
      break;
   case SEEK_END:
   	sfh->offset = len + offset;
      break;
   }
   if (sfh->offset < 0)
   	sfh->offset = 0;
   else if (sfh->offset > len)
   	sfh->offset = len;
	return 0;
}

