   sz = sfh->realspec->vartype;
   base = sfh->realspec->format;
   if (!len)
   	return sfh->offset < sz;
	if (len > (rem = (int)(sz - sfh->offset)))
   	len = rem;
   if (buf)
   	_f_memcpy(buf, base + (int)sfh->offset, len);
	return len;
}

