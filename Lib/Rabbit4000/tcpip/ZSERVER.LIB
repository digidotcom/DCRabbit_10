_zserver_nodebug int sspec_addrootfile(char* name, char* fileloc, int len, word servermask)
{
	auto int i;

	i = sspec_findunused_ram(name);
	if (i != -1) {
   	sspec_initent(server_spec + i, SSPEC_ROOTFILE, name, servermask)->format = fileloc;
