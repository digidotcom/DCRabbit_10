	len = i_min(len, sizeof(_buf));
	_f_memcpy(_buf, buf, len);
	rc = fat_Write(&sfh->u->fatfile, _buf, len);
   if (rc == -EBUSY)
   	// For our purposes, EBUSY is the same as 0.
   	rc = 0;
   return rc;
}
