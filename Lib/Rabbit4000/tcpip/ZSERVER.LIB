SSPEC_READ_DEF(sspec_fatread) {
	auto char _buf[256];
	auto int rc;
	//FIXME: FAT should be fixed to support far
	len = i_min(len, sizeof(_buf));
	if (!len) {
		// This is an EOF test
		return fat_Read(&sfh->u->fatfile, NULL, 0);
	}
   while (!(rc = fat_Read(&sfh->u->fatfile, _buf, len)));
   if (rc == -EEOF)
   	return 0;
   if (rc > 0)
   	_f_memcpy(buf, _buf, rc);
	return rc;
}

