		// and allows this small board to work with a single TLS
		// socket at a time.
		#define POP_TLS_RX_BUFFER_SIZE 6000
	#else
		#define POP_TLS_RX_BUFFER_SIZE TLS_MAX_TCP_BUFFER_LENGTH
	#endif
#endif

