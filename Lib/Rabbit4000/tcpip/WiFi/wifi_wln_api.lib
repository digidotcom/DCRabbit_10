int _wifi_ioctl_mode (char *data)
{
   if (!strcmp(data, WIFICONF_ADHOC))
   	return IFPARAM_WIFI_ADHOC;
   else if (!strcmp(data, WIFICONF_INFRASTRUCT))
   	return IFPARAM_WIFI_INFRASTRUCTURE;
